        <Label x:Name="label9" Content="Numer:" HorizontalAlignment="Left" Margin="498,26,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="textBox6" HorizontalAlignment="Left" Height="23" Margin="498,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label10" Content="Nazwa:" HorizontalAlignment="Left" Margin="498,88,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="textBox7" HorizontalAlignment="Left" Height="23" Margin="498,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label11" Content="Rodzaj:" HorizontalAlignment="Left" Margin="498,150,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
