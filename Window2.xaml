        <Label x:Name="label4" Content="Peron:" HorizontalAlignment="Left" Margin="159,26,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="label5" Content="Tor:" HorizontalAlignment="Left" Margin="159,88,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="label6" Content="Data:" HorizontalAlignment="Left" Margin="299,26,0,0" VerticalAlignment="Top" FontWeight="Bold" RenderTransformOrigin="-0.35,0.462"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="10,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="23" Margin="10,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
