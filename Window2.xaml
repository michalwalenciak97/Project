        <Calendar x:Name="calendar"  HorizontalAlignment="Left" Margin="299,52,0,0" Loaded="calendar_Loaded" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Dodaj przystanek" HorizontalAlignment="Left" Margin="159,229,0,0" VerticalAlignment="Top" Width="120" Height="32" Click="button_Click"/>
        <Label x:Name="label7" Content="Dodawanie przystanku:" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,0.423" FontWeight="Bold" FontSize="16"/>
