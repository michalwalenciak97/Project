            <Label x:Name="label" Content="Podaj datę:" HorizontalAlignment="Left" Margin="199,63,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
            <Button x:Name="button1" Content="Pokaż" HorizontalAlignment="Left" Margin="540,98,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click" />
            <Button x:Name="button2" Content="Dodaj linie" HorizontalAlignment="Left" Margin="107,242,0,0" VerticalAlignment="Top" Width="75" Click="button2_Click" />
            <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="415,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="label2" Content="Podaj nazwę przystanku" HorizontalAlignment="Left" Margin="415,63,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
            <Label x:Name="label3" Content="Tablica przyjazdów/odjazdów" HorizontalAlignment="Left" Margin="334,21,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" RenderTransformOrigin="0.505,0.046"/>
        </Grid>
    </Grid>
</Window>