            <Label x:Name="label1" Content="Rozklad Jazdy" HorizontalAlignment="Left" Margin="27,21,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" RenderTransformOrigin="0.284,0.643" Foreground="Black"/>
            <Label x:Name="label1_Copy" Content="Odjazd z:" HorizontalAlignment="Left" Margin="47,63,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="Black" FontSize="14" RenderTransformOrigin="0.88,0.478"/>
            <Label x:Name="label1_Copy1" Content="Przyjazd do:" HorizontalAlignment="Left" Margin="47,116,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="Black" FontSize="14"/>
            <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="23" Margin="41,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.481,2.843"/>
            <Label x:Name="label1_Copy2" Content="Godzina odjazdu:" HorizontalAlignment="Left" Margin="41,168,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="Black" FontSize="14"/>
            <TextBox x:Name="textBox_Copy1" HorizontalAlignment="Left" Height="23" Margin="41,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.481,2.843"/>
            <Button x:Name="button" Content="Wyszukaj" HorizontalAlignment="Left" Margin="22,242,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" RenderTransformOrigin="0.934,0.425"/>
